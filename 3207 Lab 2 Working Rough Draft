int numBuiltIn = 8;
char* builtIn[8] = {"cd",       //0
                    "clr",      //1
                    "dir",      //2
                    "environ",  //3
                    "echo",     //4
                    "help",     //5
                    "pause",    //6
                    "quit"};    //7
                    
